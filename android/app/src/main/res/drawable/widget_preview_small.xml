<?xml version="1.0" encoding="utf-8"?>
<!-- Preview for 1x1 Small Widget - Modern Dark with Orange Glow -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 3D Depth -->
    <item android:top="4dp">
        <shape android:shape="rectangle">
            <solid android:color="#0A0A15" />
            <corners android:radius="20dp" />
        </shape>
    </item>
    <!-- Main Dark Surface -->
    <item android:bottom="4dp">
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#1A1A2E"
                android:endColor="#16162A"
                android:angle="135" />
            <corners android:radius="20dp" />
        </shape>
    </item>
    <!-- Orange glow border -->
    <item android:bottom="4dp">
        <shape android:shape="rectangle">
            <stroke android:width="2dp" android:color="#40FFA94A" />
            <corners android:radius="20dp" />
        </shape>
    </item>
    <!-- Fire icon glow circle -->
    <item
        android:top="8dp"
        android:bottom="28dp"
        android:left="8dp"
        android:right="8dp">
        <shape android:shape="oval">
            <gradient
                android:type="radial"
                android:gradientRadius="40dp"
                android:startColor="#30FFA94A"
                android:endColor="#00FFA94A" />
        </shape>
    </item>
    <!-- Streak number badge (teal) -->
    <item
        android:top="48dp"
        android:bottom="6dp"
        android:left="10dp"
        android:right="10dp">
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#1FD1A5"
                android:endColor="#25E8B5"
                android:angle="135" />
            <corners android:radius="10dp" />
        </shape>
    </item>
</layer-list>
