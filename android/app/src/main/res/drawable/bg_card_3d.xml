<?xml version="1.0" encoding="utf-8"?>
<!-- Modern Dark 3D Card Background for Widgets -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Bottom 3D Depth Layer -->
    <item android:top="4dp">
        <shape android:shape="rectangle">
            <solid android:color="#0A0A15" />
            <corners android:radius="24dp" />
        </shape>
    </item>
    
    <!-- Main Surface Layer - Dark with subtle gradient -->
    <item android:bottom="4dp">
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#1A1A2E"
                android:endColor="#16162A"
                android:angle="135" />
            <corners android:radius="24dp" />
        </shape>
    </item>
    
    <!-- Inner Highlight Border -->
    <item android:bottom="4dp">
        <shape android:shape="rectangle">
            <stroke android:width="1dp" android:color="#25FFFFFF" />
            <corners android:radius="24dp" />
        </shape>
    </item>
</layer-list>
