<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Bottom 3D Depth Layer -->
    <item android:top="4dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/duo_blue_depth" />
            <corners android:radius="24dp" />
        </shape>
    </item>
    
    <!-- Main Surface Layer -->
    <item android:bottom="4dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/duo_blue" />
            <corners android:radius="24dp" />
        </shape>
    </item>
    
    <!-- Inner Highlight/Stroke (optional for extra pop) -->
    <item android:bottom="4dp">
        <shape android:shape="rectangle">
            <stroke android:width="2dp" android:color="#20FFFFFF" />
            <corners android:radius="24dp" />
        </shape>
    </item>
</layer-list>
