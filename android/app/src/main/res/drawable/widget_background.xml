<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Base dark gradient -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:type="linear"
                android:startColor="#1A1B2E"
                android:centerColor="#252742"
                android:endColor="#1F2136"
                android:angle="135" />
            <corners android:radius="24dp" />
        </shape>
    </item>
    <!-- Subtle accent glow at top -->
    <item android:top="0dp" android:bottom="0dp">
        <shape android:shape="rectangle">
            <gradient
                android:type="radial"
                android:gradientRadius="180dp"
                android:centerX="0.3"
                android:centerY="0"
                android:startColor="#3358CC02"
                android:endColor="#00000000" />
            <corners android:radius="24dp" />
        </shape>
    </item>
    <!-- Border with subtle glow -->
    <item>
        <shape android:shape="rectangle">
            <stroke
                android:width="1dp"
                android:color="#33FFFFFF" />
            <corners android:radius="24dp" />
        </shape>
    </item>
</layer-list>
