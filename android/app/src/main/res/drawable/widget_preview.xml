<?xml version="1.0" encoding="utf-8"?>
<!-- Preview for 2x2 Widget (Duolingo Style) -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Blue 3D Card -->
    <item>
        <shape android:shape="rectangle">
             <solid android:color="#118EE5" /> <!-- Depth -->
            <corners android:radius="24dp" />
        </shape>
    </item>
    <item android:bottom="4dp">
        <shape android:shape="rectangle">
            <solid android:color="#1CB0F6" /> <!-- Blue Main -->
            <corners android:radius="24dp" />
        </shape>
    </item>
    
    <!-- Title Line -->
    <item android:top="20dp" android:left="20dp" android:right="120dp">
        <shape android:shape="rectangle">
            <size android:height="10dp" />
            <solid android:color="#44FFFFFF" />
            <corners android:radius="5dp" />
        </shape>
    </item>
    
    <!-- Big Stats Placeholder -->
    <item android:top="60dp" android:left="30dp" android:right="30dp">
        <shape android:shape="rectangle">
            <size android:height="30dp" />
            <solid android:color="#58CC02" /> <!-- Green Stats -->
            <corners android:radius="15dp" />
        </shape>
    </item>
    
     <!-- Progress Bar -->
    <item android:top="110dp" android:left="20dp" android:right="20dp" android:height="12dp">
        <shape android:shape="rectangle">
            <solid android:color="#33FFFFFF" />
            <corners android:radius="6dp" />
        </shape>
    </item>
    
     <item android:top="110dp" android:left="20dp" android:right="80dp" android:height="12dp">
        <shape android:shape="rectangle">
            <solid android:color="#58CC02" />
            <corners android:radius="6dp" />
        </shape>
    </item>

</layer-list>
