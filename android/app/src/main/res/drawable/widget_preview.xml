<?xml version="1.0" encoding="utf-8"?>
<!-- Preview for 2x2 Widget - Duolingo Style Daily Progress -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 3D Depth Layer -->
    <item android:top="4dp">
        <shape android:shape="rectangle">
            <solid android:color="#118EE5" />
            <corners android:radius="24dp" />
        </shape>
    </item>
    <!-- Main Blue Surface -->
    <item android:bottom="4dp">
        <shape android:shape="rectangle">
            <solid android:color="#1CB0F6" />
            <corners android:radius="24dp" />
        </shape>
    </item>
    <!-- Inner highlight -->
    <item android:bottom="4dp">
        <shape android:shape="rectangle">
            <stroke android:width="2dp" android:color="#20FFFFFF" />
            <corners android:radius="24dp" />
        </shape>
    </item>
    <!-- Streak badge (orange pill) top right -->
    <item 
        android:top="16dp" 
        android:right="16dp"
        android:left="100dp"
        android:bottom="90dp">
        <shape android:shape="rectangle">
            <solid android:color="#FF9600" />
            <corners android:radius="12dp" />
        </shape>
    </item>
    <!-- Big Stats placeholder (green) -->
    <item 
        android:top="50dp" 
        android:left="24dp" 
        android:right="24dp"
        android:bottom="50dp">
        <shape android:shape="rectangle">
            <solid android:color="#58CC02" />
            <corners android:radius="12dp" />
        </shape>
    </item>
    <!-- Progress Bar Background -->
    <item 
        android:top="100dp" 
        android:left="20dp" 
        android:right="20dp"
        android:bottom="24dp">
        <shape android:shape="rectangle">
            <solid android:color="#33FFFFFF" />
            <corners android:radius="8dp" />
        </shape>
    </item>
    <!-- Progress Bar Fill -->
    <item 
        android:top="100dp" 
        android:left="20dp" 
        android:right="70dp"
        android:bottom="24dp">
        <shape android:shape="rectangle">
            <solid android:color="#58CC02" />
            <corners android:radius="8dp" />
        </shape>
    </item>
</layer-list>
