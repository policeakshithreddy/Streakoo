<?xml version="1.0" encoding="utf-8"?>
<!-- Preview drawable for 2x2 widget -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:type="linear"
                android:startColor="#1A1B2E"
                android:centerColor="#252742"
                android:endColor="#1F2136"
                android:angle="145" />
            <corners android:radius="24dp" />
        </shape>
    </item>
    <!-- Border -->
    <item>
        <shape android:shape="rectangle">
            <stroke
                android:width="1dp"
                android:color="#33FFFFFF" />
            <corners android:radius="24dp" />
        </shape>
    </item>
</layer-list>
