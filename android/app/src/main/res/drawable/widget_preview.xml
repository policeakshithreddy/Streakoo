<?xml version="1.0" encoding="utf-8"?>
<!-- Preview for 2x2 Widget - Modern Dark Theme with Vibrant Accents -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 3D Depth Layer -->
    <item android:top="4dp">
        <shape android:shape="rectangle">
            <solid android:color="#0A0A15" />
            <corners android:radius="24dp" />
        </shape>
    </item>
    <!-- Main Dark Surface -->
    <item android:bottom="4dp">
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#1A1A2E"
                android:endColor="#16162A"
                android:angle="135" />
            <corners android:radius="24dp" />
        </shape>
    </item>
    <!-- Border glow -->
    <item android:bottom="4dp">
        <shape android:shape="rectangle">
            <stroke android:width="1dp" android:color="#20FFA94A" />
            <corners android:radius="24dp" />
        </shape>
    </item>
    <!-- Orange streak badge top right -->
    <item 
        android:top="14dp" 
        android:right="14dp"
        android:left="100dp"
        android:bottom="95dp">
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#FF8C42"
                android:endColor="#FFA94A"
                android:angle="135" />
            <corners android:radius="12dp" />
        </shape>
    </item>
    <!-- Center content area (subtle glass) -->
    <item 
        android:top="50dp" 
        android:left="20dp" 
        android:right="20dp"
        android:bottom="48dp">
        <shape android:shape="rectangle">
            <solid android:color="#15FFFFFF" />
            <corners android:radius="12dp" />
        </shape>
    </item>
    <!-- Progress Bar Background -->
    <item 
        android:top="102dp" 
        android:left="18dp" 
        android:right="18dp"
        android:bottom="22dp">
        <shape android:shape="rectangle">
            <solid android:color="#20FFFFFF" />
            <corners android:radius="7dp" />
        </shape>
    </item>
    <!-- Progress Bar Fill (teal) -->
    <item 
        android:top="102dp" 
        android:left="18dp" 
        android:right="55dp"
        android:bottom="22dp">
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#1FD1A5"
                android:endColor="#25E8B5"
                android:angle="0" />
            <corners android:radius="7dp" />
        </shape>
    </item>
</layer-list>
