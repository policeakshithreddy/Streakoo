<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">
    
    <!-- Glass-like Gradient Background -->
    <gradient
        android:angle="135"
        android:startColor="#CC181818"
        android:centerColor="#DD181818"
        android:endColor="#FF181818" 
        android:type="linear" />
        
    <!-- Rounded Corners -->
    <corners android:radius="22dp" />
    
    <!-- Subtle Border/Stroke for Glass Effect -->
    <stroke
        android:width="1.5dp"
        android:color="#33FFFFFF" />
        
</shape>
