<?xml version="1.0" encoding="utf-8"?>
<!-- Preview for 4x2 Large Widget - Modern Dark Dashboard -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 3D Depth -->
    <item android:top="4dp">
        <shape android:shape="rectangle">
            <solid android:color="#0A0A15" />
            <corners android:radius="26dp" />
        </shape>
    </item>
    <!-- Main Dark Surface -->
    <item android:bottom="4dp">
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#1A1A2E"
                android:endColor="#16162A"
                android:angle="135" />
            <corners android:radius="26dp" />
        </shape>
    </item>
    <!-- Orange accent border -->
    <item android:bottom="4dp">
        <shape android:shape="rectangle">
            <stroke android:width="1dp" android:color="#25FFA94A" />
            <corners android:radius="26dp" />
        </shape>
    </item>
    <!-- Left side - Label -->
    <item 
        android:top="14dp" 
        android:left="16dp" 
        android:right="170dp"
        android:bottom="112dp">
        <shape android:shape="rectangle">
            <solid android:color="#15FFFFFF" />
            <corners android:radius="6dp" />
        </shape>
    </item>
    <!-- Left side - Stats glass card -->
    <item 
        android:top="36dp" 
        android:left="18dp" 
        android:right="160dp"
        android:bottom="52dp">
        <shape android:shape="rectangle">
            <solid android:color="#12FFFFFF" />
            <stroke android:width="1dp" android:color="#15FFFFFF" />
            <corners android:radius="12dp" />
        </shape>
    </item>
    <!-- Left side - Progress bar bg -->
    <item 
        android:top="96dp" 
        android:left="18dp" 
        android:right="162dp"
        android:bottom="24dp">
        <shape android:shape="rectangle">
            <solid android:color="#20FFFFFF" />
            <corners android:radius="6dp" />
        </shape>
    </item>
    <!-- Left side - Progress bar fill (teal) -->
    <item 
        android:top="96dp" 
        android:left="18dp" 
        android:right="195dp"
        android:bottom="24dp">
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#1FD1A5"
                android:endColor="#25E8B5"
                android:angle="0" />
            <corners android:radius="6dp" />
        </shape>
    </item>
    <!-- Divider -->
    <item 
        android:left="138dp"
        android:right="152dp"
        android:top="20dp"
        android:bottom="20dp">
        <shape android:shape="rectangle">
            <solid android:color="#15FFFFFF" />
        </shape>
    </item>
    <!-- Right side - Streak card (orange gradient) -->
    <item 
        android:top="14dp" 
        android:left="152dp" 
        android:right="16dp"
        android:bottom="60dp">
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#FF8C42"
                android:endColor="#FFA94A"
                android:angle="135" />
            <corners android:radius="14dp" />
        </shape>
    </item>
    <!-- Right side - Habits card (glass) -->
    <item 
        android:top="72dp" 
        android:left="152dp" 
        android:right="16dp"
        android:bottom="14dp">
        <shape android:shape="rectangle">
            <solid android:color="#15FFFFFF" />
            <stroke android:width="1dp" android:color="#20FFFFFF" />
            <corners android:radius="14dp" />
        </shape>
    </item>
</layer-list>
