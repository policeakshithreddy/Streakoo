<?xml version="1.0" encoding="utf-8"?>
<!-- Preview for 3x3 Focus Widget - Modern Dark with Teal Ring -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 3D Depth -->
    <item android:top="4dp">
        <shape android:shape="rectangle">
            <solid android:color="#0A0A15" />
            <corners android:radius="28dp" />
        </shape>
    </item>
    <!-- Main Dark Surface -->
    <item android:bottom="4dp">
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#1A1A2E"
                android:endColor="#16162A"
                android:angle="135" />
            <corners android:radius="28dp" />
        </shape>
    </item>
    <!-- Teal accent border -->
    <item android:bottom="4dp">
        <shape android:shape="rectangle">
            <stroke android:width="1dp" android:color="#201FD1A5" />
            <corners android:radius="28dp" />
        </shape>
    </item>
    <!-- Header label -->
    <item 
        android:top="16dp" 
        android:left="18dp" 
        android:right="100dp"
        android:bottom="155dp">
        <shape android:shape="rectangle">
            <solid android:color="#15FFFFFF" />
            <corners android:radius="6dp" />
        </shape>
    </item>
    <!-- Star badge (orange) -->
    <item 
        android:top="14dp" 
        android:left="130dp" 
        android:right="16dp"
        android:bottom="153dp">
        <shape android:shape="oval">
            <gradient
                android:startColor="#FF8C42"
                android:endColor="#FFA94A"
                android:angle="135" />
        </shape>
    </item>
    <!-- Circle progress background -->
    <item 
        android:top="48dp" 
        android:left="52dp" 
        android:right="52dp"
        android:bottom="48dp">
        <shape android:shape="oval">
            <stroke android:width="10dp" android:color="#20FFFFFF" />
        </shape>
    </item>
    <!-- Circle progress fill (teal) -->
    <item 
        android:top="48dp" 
        android:left="52dp" 
        android:right="52dp"
        android:bottom="48dp">
        <shape android:shape="oval">
            <stroke android:width="10dp" android:color="#1FD1A5" />
        </shape>
    </item>
    <!-- Center percentage circle (teal glow) -->
    <item 
        android:top="72dp" 
        android:left="72dp" 
        android:right="72dp"
        android:bottom="72dp">
        <shape android:shape="oval">
            <gradient
                android:type="radial"
                android:gradientRadius="30dp"
                android:startColor="#1FD1A5"
                android:endColor="#151FD1A5" />
        </shape>
    </item>
    <!-- Bottom status text -->
    <item 
        android:top="158dp" 
        android:left="45dp" 
        android:right="45dp"
        android:bottom="16dp">
        <shape android:shape="rectangle">
            <solid android:color="#15FFFFFF" />
            <stroke android:width="1dp" android:color="#15FFFFFF" />
            <corners android:radius="10dp" />
        </shape>
    </item>
</layer-list>
