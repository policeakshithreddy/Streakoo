<?xml version="1.0" encoding="utf-8"?>
<!-- Preview for 3x3 Focus Widget (Orange Style) -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
     <!-- Orange 3D Card -->
    <item>
        <shape android:shape="rectangle">
             <solid android:color="#CC7A00" /> <!-- Depth -->
            <corners android:radius="28dp" />
        </shape>
    </item>
    <item android:bottom="4dp">
        <shape android:shape="rectangle">
            <solid android:color="#FF9600" /> <!-- Orange Main -->
            <corners android:radius="28dp" />
        </shape>
    </item>
    
    <!-- Circle Stats -->
    <item android:width="80dp" android:height="80dp" android:gravity="center">
        <shape android:shape="oval">
            <stroke android:width="8dp" android:color="#44FFFFFF" />
        </shape>
    </item>
    
    <item android:width="80dp" android:height="80dp" android:gravity="center">
        <shape android:shape="oval">
            <stroke android:width="8dp" android:color="#FFFFFF" />
             <!-- Dash gap logic not easy in shape, just solid for preview -->
        </shape>
    </item>
    
    <item android:gravity="center" android:width="40dp" android:height="20dp">
         <shape android:shape="rectangle">
            <solid android:color="#FFFFFF" />
        </shape>
    </item>

</layer-list>
