<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#1A1B2E"
    android:padding="24dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Choose Focus Mode"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:layout_marginBottom="8dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select what you want to track on your home screen."
        android:textSize="14sp"
        android:textColor="#AAAAAA"
        android:layout_marginBottom="24dp" />

    <!-- Mode 1: Habits -->
    <LinearLayout
        android:id="@+id/card_habits"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_card_3d_orange"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical"
        android:layout_marginBottom="16dp"
        android:clickable="true"
        android:focusable="true">

        <TextView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:text="ðŸ”¥"
            android:textSize="24sp"
            android:gravity="center"
            android:background="@drawable/white_circle_bg"
            android:padding="4dp" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginStart="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Habits Mastery"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#FFFFFF" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Track consistency &amp; top habits"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="#DDFFFFFF" />
        </LinearLayout>
        
        <RadioButton
            android:id="@+id/radio_habits"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:buttonTint="#FFFFFF"
            android:clickable="false" />
    </LinearLayout>

    <!-- Mode 2: Steps -->
    <LinearLayout
        android:id="@+id/card_steps"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_card_3d"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical"
        android:layout_marginBottom="16dp"
        android:clickable="true"
        android:focusable="true">

        <TextView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:text="ðŸ‘Ÿ"
            android:textSize="24sp"
            android:gravity="center"
            android:background="@drawable/white_circle_bg"
            android:padding="4dp" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginStart="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Step Crusher"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#FFFFFF" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Daily activity &amp; movement"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="#DDFFFFFF" />
        </LinearLayout>
        
         <RadioButton
            android:id="@+id/radio_steps"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:buttonTint="#FFFFFF"
            android:clickable="false" />
    </LinearLayout>

    <!-- Mode 3: Sleep -->
    <LinearLayout
        android:id="@+id/card_sleep"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_card_3d"
        android:backgroundTint="@color/duo_purple"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical"
        android:clickable="true"
        android:focusable="true">

        <TextView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:text="ðŸ˜´"
            android:textSize="24sp"
            android:gravity="center"
            android:background="@drawable/white_circle_bg"
            android:padding="4dp" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginStart="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sleep Zen"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#FFFFFF" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rest &amp; recovery monitoring"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="#DDFFFFFF" />
        </LinearLayout>
        
         <RadioButton
            android:id="@+id/radio_sleep"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:buttonTint="#FFFFFF"
            android:clickable="false" />
    </LinearLayout>
    
    <View android:layout_width="match_parent" android:layout_height="0dp" android:layout_weight="1" />

    <Button
        android:id="@+id/btn_save"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:text="Create Widget"
        android:textSize="16sp"
        android:textColor="#FFFFFF"
        android:backgroundTint="#FF6B35" />

</LinearLayout>
