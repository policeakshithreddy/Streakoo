<?xml version="1.0" encoding="utf-8"?>
<!-- Streakoo 4x2 Large Widget - Modern Dark Dashboard -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widget_root_large"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_widget_glass"
    android:layout_margin="8dp"
    android:orientation="horizontal"
    android:padding="14dp">

    <!-- Left: Big Stats -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="DAILY GOALS"
            android:textColor="#88FFFFFF"
            android:textSize="10sp"
            android:textStyle="bold"
            android:letterSpacing="0.15" />

        <TextView
            android:id="@+id/appwidget_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="3/5"
            android:textColor="#FFA94A"
            android:textSize="44sp"
            android:fontFamily="sans-serif-black"
            android:textStyle="bold" 
            android:shadowColor="#201FD1A5"
            android:shadowDx="0"
            android:shadowDy="2"
            android:shadowRadius="4" />

        <ProgressBar
            android:id="@+id/widget_progress_bar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="14dp"
            android:max="100"
            android:progress="60"
            android:progressDrawable="@drawable/progress_bar_chunk" />
            
        <TextView
            android:id="@+id/widget_motivation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="You're crushing it! ðŸ’ª"
            android:textColor="#99FFFFFF"
            android:textSize="11sp"
            android:textStyle="bold" />
    </LinearLayout>

    <!-- Divider -->
    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="12dp"
        android:background="#20FFFFFF" />

    <!-- Right: Mini Cards -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <!-- Streak Card (Orange gradient) -->
        <LinearLayout
            android:layout_width="82dp"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_widget_info_orange"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="10dp"
            android:layout_marginBottom="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ”¥"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/widget_streak_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:fontFamily="sans-serif-black"
                android:textStyle="bold" />
                
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="STREAK"
                android:textColor="#CCFFFFFF"
                android:textSize="8sp"
                android:letterSpacing="0.1"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- Habits Card (Glass) -->
        <LinearLayout
            android:layout_width="82dp"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_widget_info_teal"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="âœ…"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/widget_habits_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5"
                android:textColor="#1FD1A5"
                android:textSize="16sp"
                android:fontFamily="sans-serif-black"
                android:textStyle="bold" />
                
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="HABITS"
                android:textColor="#AAFFFFFF"
                android:textSize="8sp"
                android:letterSpacing="0.1"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
