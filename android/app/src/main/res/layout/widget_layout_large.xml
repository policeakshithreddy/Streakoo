<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_card_3d"
    android:layout_margin="8dp"
    android:orientation="horizontal"
    android:padding="16dp">

    <!-- Left: Big Stats -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="DAILY GOALS"
            android:textColor="#88FFFFFF"
            android:textSize="11sp"
            android:textStyle="bold"
            android:letterSpacing="0.1" />

        <TextView
            android:id="@+id/appwidget_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3/5"
            android:textColor="@color/duo_green"
            android:textSize="42sp"
            android:fontFamily="sans-serif-black"
            android:textStyle="bold" 
            android:shadowColor="#33000000"
            android:shadowDx="0"
            android:shadowDy="2"
            android:shadowRadius="2" />

        <ProgressBar
            android:id="@+id/widget_progress_bar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="16dp"
            android:layout_marginTop="8dp"
            android:max="100"
            android:progress="60"
            android:progressDrawable="@drawable/progress_bar_chunk" />
            
        <TextView
            android:id="@+id/widget_motivation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="You're crushing it!"
            android:textColor="@color/duo_green"
            android:textSize="12sp"
            android:textStyle="bold" />
    </LinearLayout>

    <!-- Divider -->
    <View
        android:layout_width="2dp"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="16dp"
        android:background="#20FFFFFF" />

    <!-- Right: Mini Cards -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <!-- Streak Card -->
        <LinearLayout
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_card_3d_orange"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="8dp"
            android:layout_marginBottom="12dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ”¥"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/widget_streak_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- Steps Card -->
        <LinearLayout
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_card_3d"
            android:backgroundTint="@color/duo_blue"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ‘Ÿ"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/widget_steps_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5.2k"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
